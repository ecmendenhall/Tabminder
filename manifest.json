{
  "name": "Tabminder",
  "version": "1.0",
  "background": { "scripts": ["/js/background.js"] },
  "options_page": "/html/options.html",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
       ],
  "browser_action": {
    "default_icon": "/img/off.png",
    "icons": ["/img/off.png", "img/on.png"],
    "default_popup": "html/popup.html"
  },
  "icons": {
      "48": "img/tabminder48.png",
      "128": "img/tabminder128.png"
  },
  "description": "A simple extension that provides gentle reminders when browsing distracting sites.",
  "manifest_version": 2,
  "web_accessible_resources": ["/html/timeup.html", 
                               "/html/settings.html", 
                               "/html/help.html", 
                               "/html/about.html",
                               "/tests/tests.html"]
}
